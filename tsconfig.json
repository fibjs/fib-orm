{
	"compilerOptions": {
		"target": "es6",
		"module": "commonjs",
		"noImplicitAny": true,
		"noImplicitUseStrict": true,
		"inlineSourceMap": false,
		"allowJs": true,
		"lib": [
			"es6",
			"es2015",
			"es2016"
		],
		"declaration": true,
		"declarationDir": "lib",
		"outDir": "lib",
		"types": [
			"@fibjs/types"
		],
		"skipLibCheck": true,
		"noEmitOnError": false
	},
	"include": [
		"src/**/*"
	],
	"exclude": [
		"lib.ts",
		"src/**/*.js",
		"src/plugins/**/*",
		"test/**/*"
	]
}
